    "interactions": {
      "transitions": {
        "fast": "0.15s ease",
        "base": "0.2s ease",
        "slow": "0.3s ease"
      },
      "animations": {
        "fadeIn": {
          "from": "opacity: 0",
          "to": "opacity: 1",
          "duration": "0.2s",
          "timing": "ease-in"
        },
        "slideUp": {
          "from": "transform: translateY(10px); opacity: 0",
          "to": "transform: translateY(0); opacity: 1",
          "duration": "0.3s",
          "timing": "ease-out"
        },
        "scaleIn": {
          "from": "transform: scale(0.95); opacity: 0",
          "to": "transform: scale(1); opacity: 1",
          "duration": "0.2s",
          "timing": "ease-out"
        }
      },
      "hoverEffects": {
        "lift": "transform: translateY(-2px)",
        "scale": "transform: scale(1.05)",
        "glow": "box-shadow: 0 0 0 4px rgba(77, 108, 255, 0.1)"
      }
    },
    "layout": {
      "containerMaxWidth": "1280px",
      "contentMaxWidth": "960px",
      "sidebarWidth": "280px",
      "gridGap": "24px",
      "sectionSpacing": "48px"
    },
    "criticalRules": {
      "DO_NOT": [
        "NEVER apply gradients to UI components - all backgrounds are solid colors",
        "NEVER add shadows to text elements",
        "NEVER use different border radius on hover states",
        "NEVER apply background colors to icons unless they have explicit containers",
        "NEVER use border-box sizing for icon elements",
        "NEVER apply card styling to icon containers",
        "NEVER use multiple font weights in the same text element",
        "NEVER apply transforms to text content",
        "NEVER use absolute positioning for inline text elements",
        "NEVER apply opacity to entire button elements on hover - only change background color",
        "NEVER use text-shadow on any elements",
        "NEVER apply filters to color swatches",
        "NEVER use box-sizing: content-box",
        "NEVER apply negative margins to direct children of flex containers",
        "NEVER use transform-origin changes on hover",
        "NEVER apply will-change to more than 2 properties"
      ],
      "ALWAYS": [
        "Use solid colors from the defined palette",
        "Apply shadows only to container elements (cards, buttons, tooltips)",
        "Keep icon colors matching their semantic context",
        "Use consistent border radius values from the scale",
        "Apply padding to containers, not content",
        "Use flexbox or grid for layout, avoid absolute positioning",
        "Maintain consistent spacing using the spacing scale",
        "Use the defined typography scale",
        "Apply hover states only to interactive elements",
        "Use semantic color names for status indicators",
        "Keep transition durations consistent",
        "Use outline for focus states, not border changes"
      ]
    }
  }
}