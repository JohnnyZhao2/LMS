        "swatch": {
          "size": "48px",
          "borderRadius": "12px",
          "border": "none",
          "shadow": "none",
          "spacing": "8px",
          "background": "solid color from palette",
          "hover": {
            "transform": "scale(1.05)",
            "shadow": "0 4px 8px rgba(0, 0, 0, 0.15)",
            "transition": "all 0.2s ease"
          }
        },
        "label": {
          "fontSize": "12px",
          "fontWeight": 500,
          "color": "#868E96",
          "marginBottom": "12px"
        },
        "DO_NOT": [
          "Do not apply gradients to color swatches",
          "Do not add borders to swatches",
          "Do not add text inside swatches"
        ]
      },
