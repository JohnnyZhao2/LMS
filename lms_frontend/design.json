        "sm": "12px",
        "base": "14px",
        "md": "15px",
        "lg": "16px",
        "xl": "18px",
        "2xl": "20px",
        "3xl": "24px"
      },
      "fontWeight": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeight": {
        "tight": 1.2,
        "normal": 1.5,
        "relaxed": 1.6
      },
      "textColors": {
        "primary": "#212529",
        "secondary": "#495057",
        "tertiary": "#868E96",
        "disabled": "#ADB5BD",
        "inverse": "#FFFFFF",
        "link": "#4D6CFF",
        "error": "#FF3D71",
        "success": "#10B759"
      }
    },
    "spacing": {
      "scale": {
        "0": "0px",
        "1": "4px",
        "2": "8px",
        "3": "12px",
        "4": "16px",
        "5": "20px",
        "6": "24px",
        "8": "32px",
        "10": "40px",
        "12": "48px",
        "16": "64px"
      }
